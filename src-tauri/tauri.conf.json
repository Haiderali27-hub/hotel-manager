{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "INERTIA",
  "version": "0.1.0",
  "identifier": "com.inertia.app",
  "build": {
    "frontendDist": "../dist",  
    "devUrl": "http://localhost:5173",  
    "beforeDevCommand": "npm run dev",  
    "beforeBuildCommand": "npm run build" 
  },
  "app": {
    "windows": [
      {
        "title": "INERTIA",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [
      "../src/assets/Logo/logo.png"
    ]
  }
}
