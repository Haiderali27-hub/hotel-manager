{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "hotel-app",
  "version": "0.1.0",
  "identifier": "com.hotelmanager.app",
  "build": {
    "frontendDist": "../dist",  
    "devUrl": "http://localhost:5173",  
    "beforeDevCommand": "npm run dev",  
    "beforeBuildCommand": "npm run build" 
  },
  "app": {
    "windows": [
      {
        "title": "Hotel Manager - Admin Portal",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": true,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",  
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
